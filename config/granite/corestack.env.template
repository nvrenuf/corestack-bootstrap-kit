# Copy to corestack.env and customize for your environment.
# Do not commit secrets.

STACK_NAME=corestack-granite
TZ=UTC

# Routing / TLS
PUBLIC_WEBUI_HOST=localhost
PUBLIC_N8N_HOST=n8n.localhost

# Internal binds
OLLAMA_BIND=127.0.0.1:11434
QDRANT_BIND=127.0.0.1:6333
POSTGRES_BIND=127.0.0.1:5432

# Service defaults
WEBUI_PORT=3000
N8N_PORT=5678
POSTGRES_DB=corestack
POSTGRES_USER=corestack
POSTGRES_PASSWORD=change_me_now

# Optional admin bootstrap values
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_now
