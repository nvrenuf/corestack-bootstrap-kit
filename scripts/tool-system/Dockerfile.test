FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /workspace

COPY tool-gateway/requirements.txt /tmp/requirements.txt
COPY tool-gateway/requirements-dev.txt /tmp/requirements-dev.txt
RUN python -m pip install --no-cache-dir -r /tmp/requirements.txt -r /tmp/requirements-dev.txt

ENTRYPOINT ["bash", "-lc"]
