## Secure profile: locked-down internet access by default.
## Copy to .env and edit as needed:
##   cp .env.example .env

# Host ports (base ports)
PORT_LAUNCHER=8080
PORT_OPEN_WEBUI=3000
PORT_N8N=5678
PORT_ADMINER=8081
PORT_TOOL_GATEWAY=8787
PORT_OLLAMA=11434
PORT_POSTGRES=5432

# Models / UI
CHAT_MODEL=granite3.1-moe:3b-instruct-q4_K_M
EMBEDDING_MODEL=nomic-embed-text:v1.5

# Prefer in-network addressing so two projects can run at once.
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_NUM_PARALLEL=1

# Tool policies (secure defaults)
# Empty allowlist denies all; a minimal default keeps the system effectively locked down.
WEB_ALLOWLIST=localhost,127.0.0.1
WEB_ALLOWLIST_FILE=
WEB_TIMEOUT_MS=10000
WEB_USER_AGENT=corestack-n8n-tools/1.0
CACHE_TTL_SECONDS=900
WEB_MAX_CONTENT_BYTES=200000
WEB_MIN_INTERVAL_MS=1000
WEB_MAX_BYTES=1500000

# Tool Gateway backend:
# - local: web.fetch works (allowlisted hosts only); web.search is NOT configured
# - n8n: enable both tools via n8n workflows (set the URLs below)
TOOL_BACKEND=local
N8N_WEB_FETCH_URL=http://n8n:5678/webhook/tools/web.fetch
N8N_WEB_SEARCH_URL=http://n8n:5678/webhook/tools/web.search

# Postgres
POSTGRES_USER=corestack
POSTGRES_PASSWORD=change_me
POSTGRES_DB=corestack
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

