## Marketing profile: permissive internet access by default (explicitly opt-in via WEB_ALLOWLIST=*).
## Copy to .env and edit as needed:
##   cp .env.example .env

# Host ports (base ports +100)
PORT_LAUNCHER=8180
PORT_OPEN_WEBUI=3100
PORT_N8N=5778
PORT_ADMINER=8181
PORT_TOOL_GATEWAY=8887
PORT_OLLAMA=11534
PORT_POSTGRES=5532

# Models / UI
CHAT_MODEL=granite3.1-moe:3b-instruct-q4_K_M
EMBEDDING_MODEL=nomic-embed-text:v1.5
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_NUM_PARALLEL=1

# Tool policies (marketing defaults)
# Tool Gateway supports '*' as an explicit wildcard (allow all); everything is still logged.
WEB_ALLOWLIST=*
WEB_ALLOWLIST_FILE=
WEB_TIMEOUT_MS=10000
WEB_USER_AGENT=corestack-n8n-tools/1.0
CACHE_TTL_SECONDS=900
WEB_MAX_CONTENT_BYTES=200000
WEB_MIN_INTERVAL_MS=1000
WEB_MAX_BYTES=1500000

# Prefer n8n backend so both web.fetch and web.search are available.
TOOL_BACKEND=n8n
N8N_WEB_FETCH_URL=http://n8n:5678/webhook/tools/web.fetch
N8N_WEB_SEARCH_URL=http://n8n:5678/webhook/tools/web.search

# Marketing integrations (placeholders; use n8n Credentials where possible)
SEARCH_API_URL=
SEARCH_API_KEY=
SOCIAL_API_KEY=
IMAGE_GEN_API_KEY=

# Postgres
POSTGRES_USER=corestack
POSTGRES_PASSWORD=change_me
POSTGRES_DB=corestack
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

