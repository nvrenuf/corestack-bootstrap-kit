{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://corestack.dev/schemas/tools/web.search.response.schema.json",
  "title": "web.search Response",
  "oneOf": [
    {
      "title": "Success",
      "allOf": [
        { "$ref": "./envelope.schema.json" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["ok", "data"],
          "properties": {
            "ok": { "const": true },
            "error": { "type": ["null"] },
            "data": {
              "type": "object",
              "additionalProperties": true,
              "required": ["query", "results", "searched_at"],
              "properties": {
                "query": { "type": "string" },
                "results": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": true,
                    "required": ["title", "url", "snippet", "source"],
                    "properties": {
                      "title": { "type": "string" },
                      "url": { "type": "string" },
                      "snippet": { "type": "string" },
                      "source": { "type": "string" },
                      "published_at": { "type": ["string", "null"] }
                    }
                  }
                },
                "searched_at": { "type": "string", "format": "date-time" }
              }
            }
          }
        }
      ]
    },
    {
      "title": "Error",
      "allOf": [
        { "$ref": "./envelope.schema.json" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["ok", "data", "error"],
          "properties": {
            "ok": { "const": false },
            "data": { "type": "object", "additionalProperties": true },
            "error": { "$ref": "./error.schema.json" }
          }
        }
      ]
    }
  ]
}

